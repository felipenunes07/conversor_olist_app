{
    "version": 2,
    "builds": [
        {
            "src": "src/main.py",
            "use": "@vercel/python",
            "config": {
                "runtime": "python3.12",
                "maxLambdaSize": "15mb"
            }
        },
        {
            "src": "src/static/**",
            "use": "@vercel/static"
        }
    ],
    "routes": [
        {
            "src": "/static/(.*)",
            "dest": "/src/static/$1"
        },
        {
            "src": "/(.*)",
            "dest": "src/main.py"
        }
    ],
    "env": {
        "PYTHONPATH": ".",
        "FLASK_ENV": "production"
    }
} 